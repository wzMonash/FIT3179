{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/wzMonash/FIT3179/refs/heads/main/A2/cleaned_crime_district_year_only.csv"},
    "params": [
      {
        "name": "year_selection",
        "value": 2016,
        "bind": {
          "input": "range",
          "min": 2016,
          "max": 2022,
          "step": 1,
          "name": "Year: "
        }
      },
      {
        "name": "type_selection",
        "value": "all",
        "bind": {
          "input": "select",
          "options": [
            "all",
            "causing_injury",
            "murder",
            "rape",
            "robbery_gang_armed",
            "robbery_gang_unarmed",
            "robbery_solo_armed",
            "robbery_solo_unarmed",
            "break_in",
            "theft_other",
            "theft_vehicle_lorry",
            "theft_vehicle_motorcar",
            "theft_vehicle_motorcycle"
          ],
          "labels": [
            "All",
            "Causing injury",
            "Murder",
            "Rape",
            "Grouped armed robbery",
            "Grouped unarmed robbery",
            "Solo armed robbery",
            "Solo unarmed robbery",
            "Break in",
            "Theft (Other)",
            "Theft (Lorry)",
            "Theft (Motorcar)",
            "Theft (Motorcycle)"
          ],
          "name": "Type: "
        }
      }
    ],
    "hconcat": [
      {
        "width": 600,
        "height": 400,
        "title": "Sum of Crimes by State in Malaysia",
        "projection": {"type": "mercator"},
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/wzMonash/FIT3179/refs/heads/main/A2/gadm41_MYS_1.json",
              "format": {"type": "topojson", "feature": "gadm41_MYS_1"}
            },
            "mark": {"type": "geoshape", "stroke": "white"}
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/wzMonash/FIT3179/refs/heads/main/A2/cleaned_crime_district_year_only.csv"
            },
            "transform": [
              {
                "filter": "datum.state != 'Malaysia' && datum.district == 'All' && datum.date == year_selection && datum.type == type_selection"
              },
              {
                "aggregate": [{"op": "sum", "field": "crimes", "as": "total_crimes"}],
                "groupby": ["state"]
              },
              {
                "window": [{"op": "rank", "as": "rank"}],
                "sort": [{"field": "total_crimes", "order": "descending"}]
              },
              {
                "lookup": "state",
                "from": {
                  "data": {
                    "url": "https://raw.githubusercontent.com/wzMonash/FIT3179/refs/heads/main/A2/gadm41_MYS_1.json",
                    "format": {
                      "type": "topojson",
                      "feature": "gadm41_MYS_1"
                    }
                  },
                  "key": "properties.NAME_1"
                },
                "as": "geo"
              }
            ],
            "mark": {"type": "geoshape", "stroke": "white"},
            "encoding": {
              "shape": {"field": "geo", "type": "geojson"},
              "color": {
                "field": "total_crimes",
                "type": "quantitative",
                "scale": {"scheme": "plasma"},
                "title": "Crimes"
              },
              "tooltip": [
                {"field": "state", "type": "nominal", "title": "State"},
                {"field": "total_crimes", "type": "quantitative", "title": "Crimes"},
                {"field": "rank", "type": "quantitative", "title": "Rank"}
              ]
            }
          }
        ],
        "resolve": {"scale": {"color": "independent"}}
      },
      {
        "width": 475,
        "height": 200,
        "mark": {"type": "area", "line": true, "point": true},
        "title": "Crimes in Malaysia",
        "transform": [
          {
            "filter": "datum.state == 'Malaysia' && datum.district == 'All' && datum.type != 'all'"
          },
          {
            "aggregate": [{"op": "sum", "field": "crimes", "as": "total_crimes"}],
            "groupby": ["date", "type"]
          }
        ],
        "encoding": {
          "x": {
            "field": "date",
            "type": "ordinal",
            "title": ""},
          "y": {
            "field": "total_crimes",
            "type": "quantitative",
            "title": "Total crime"
            },
            "color": {
              "condition": {
                "test": "datum.type == type_selection",
                "field": "type",
                "type": "nominal",
                "title": "Crime type"
              },
              "value": "lightgray"
            },
            "tooltip": [
              {"field": "date", "type": "ordinal", "title": "Year"},
              {"field": "total_crimes", "type": "quantitative", "title": "Total crimes"},
              {"field": "type", "type": "nominal", "title": "Crime type"}
            ]
        }
      }
    ]
  }
  
